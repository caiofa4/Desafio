<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <include
                android:id="@+id/home_toolbar"
                layout="@layout/toolbar"/>


            <LinearLayout
                android:id="@+id/linear_Layout_Image_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mobile_background"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/espresso"
                    android:layout_gravity="center"

                    />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear_Layout_Information_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"

                            >

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_name_details"
                                android:text="Macchiato"
                                android:textSize="18sp"
                                android:textColor="@color/colorListText"

                                android:layout_marginStart="20dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_size_details"
                                android:text="200 ML"
                                android:textSize="18sp"
                                android:textColor="@color/colorListText"
                                android:layout_marginStart="20dp"

                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorSeparator"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_select_size_details"
                                android:text="@string/size_text"
                                android:textSize="18sp"
                                android:textColor="@color/colorListText"

                                android:layout_marginStart="20dp"
                                android:layout_weight="4"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/cup"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/cup"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/cup"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="40dp"

                                    android:layout_weight="1"/>


                            </LinearLayout>




                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorSeparator"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_select_sugar_details"
                                android:text="@string/sugar_text"
                                android:textSize="18sp"
                                android:textColor="@color/colorListText"

                                android:layout_marginStart="20dp"
                                android:layout_weight="4"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/no_sugar"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/sugar1"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="19dp"
                                    android:src="@drawable/sugar2"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/sugar3"
                                    android:layout_weight="1"/>

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorSeparator"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_select_additional_details"
                                android:text="@string/additional_text"
                                android:textSize="18sp"
                                android:textColor="@color/colorListText"

                                android:layout_marginStart="20dp"
                                android:layout_weight="4"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/cream"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/chocolate"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/cinnamon"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_marginTop="-3dp"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/coffe"
                                    android:layout_weight="1"/>

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/milk"
                                    android:layout_weight="1"/>

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorSeparator"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/product_select_amount_details"
                                android:text="@string/amount_text"
                                android:textSize="18sp"
                                android:textColor="@color/colorListText"

                                android:layout_marginStart="20dp"
                                android:layout_weight="8"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical|right"

                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="2dp"
                                    android:src="@drawable/less"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorText"
                                    android:textSize="18sp"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"/>

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/plus"
                                    android:layout_weight="1"/>

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorSeparator"/>




                    </LinearLayout>


                </ScrollView>

            </LinearLayout>



        </LinearLayout>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorCartButton"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:id="@+id/linearLayoutFavoriteList"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite_name_list"
                    android:text="@string/put_on_cart_text"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>